# Application Name
APP_NAME="ERP DryMix Products"

# Application Environment
# Set to "local" for development, "production" for production
APP_ENV=local

# Application Debug Mode
# IMPORTANT: Set to "false" in production to prevent exposing sensitive information
APP_DEBUG=false

# Application URL
APP_URL=http://localhost:8100

# Logging Configuration
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=erp_drymix
DB_USERNAME=erp_user
DB_PASSWORD=your_secure_password_here

# BROADCAST_DRIVER, CACHE_DRIVER, FILESYSTEM_DISK, QUEUE_CONNECTION, SESSION_DRIVER
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Memcached/Redis Configuration
MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Frontend CORS Configuration
FRONTEND_URL=http://localhost:3000
FRONTEND_URL_DEV=http://localhost:5173

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@erpdrymix.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 Configuration (for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher Configuration (for real-time features)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Laravel Sanctum Configuration
# Comma-separated list of domains for stateful authentication
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,localhost:5173,127.0.0.1,127.0.0.1:3000,127.0.0.1:5173,::1

# Rate Limiting Configuration
# Default: 60 requests per minute for authenticated users
# Login: 5 requests per minute
# Register: 10 requests per minute
RATE_LIMIT_AUTH=60,1
RATE_LIMIT_LOGIN=5,1
RATE_LIMIT_REGISTER=10,1
RATE_LIMIT_PASSWORD=3,1

# Password Requirements
# Minimum password length (default: 12)
PASSWORD_MIN_LENGTH=12

# Session Configuration
SESSION_COOKIE=session_token
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false

# Laravel Vapor Configuration (if using Vapor)
VAPOR_API_MODEL_ID=

# Application Key
# Generate with: php artisan key:generate
APP_KEY=base64:your_generated_application_key_here

# Laravel Sanctum Token Expiration (in minutes)
# Access token: 7 days (10080 minutes)
# Refresh token: 30 days (43200 minutes)
SANCTUM_ACCESS_TOKEN_EXPIRATION=10080
SANCTUM_REFRESH_TOKEN_EXPIRATION=43200

# File Upload Configuration
# Maximum file size in kilobytes (default: 10240 KB = 10 MB)
FILE_UPLOAD_MAX_SIZE=10240

# Allowed file types for upload
# Comma-separated list of MIME types
FILE_UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,text/csv,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet

# Backup Configuration
BACKUP_DISK=local
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *" # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Monitoring Configuration
# Sentry DSN for error tracking (optional)
SENTRY_DSN=

# LogRocket App ID for session replay (optional)
LOGROCKET_APP_ID=

# Analytics Configuration
# Google Analytics ID (optional)
GOOGLE_ANALYTICS_ID=

# Timezone Configuration
APP_TIMEZONE=Asia/Kolkata

# Locale Configuration
APP_LOCALE=en
APP_FALLBACK_LOCALE=en

# Frontend Environment Variables
# These are used by Vite for frontend build
VITE_APP_NAME="${APP_NAME}"
VITE_API_BASE_URL="http://localhost:8100/api/v1"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Security Headers Configuration
SECURITY_HSTS_ENABLED=true
SECURITY_HSTS_MAX_AGE=31536000
SECURITY_HSTS_INCLUDE_SUBDOMAINS=true
SECURITY_HSTS_PRELOAD=true
