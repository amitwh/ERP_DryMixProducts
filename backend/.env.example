# =============================================================================
# ERP DryMix Products - Environment Configuration
# =============================================================================
# Copy this file to .env and update values for your environment
# DO NOT commit the .env file to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME="ERP DryMix Products"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8101
APP_TIMEZONE=Asia/Kolkata
APP_LOCALE=en
APP_FALLBACK_LOCALE=en

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# Database Configuration (cinfo MariaDB)
# -----------------------------------------------------------------------------
DB_CONNECTION=mysql
DB_HOST=mariadb
DB_PORT=3306
DB_DATABASE=erp_drymix
DB_USERNAME=root
DB_PASSWORD=angles123

# For local development without Docker:
# DB_HOST=127.0.0.1
# DB_USERNAME=erp_user
# DB_PASSWORD=your_secure_password_here

# -----------------------------------------------------------------------------
# Redis Configuration (cinfo Redis)
# -----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=angles123
REDIS_DB=0

# For local development without Docker:
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null

# -----------------------------------------------------------------------------
# Cache, Queue, Session Drivers
# -----------------------------------------------------------------------------
BROADCAST_DRIVER=log
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# For development without Redis:
# CACHE_DRIVER=file
# QUEUE_CONNECTION=sync
# SESSION_DRIVER=file

# -----------------------------------------------------------------------------
# Mail Configuration (cinfo MailHog for testing)
# -----------------------------------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@erpdrymix.local"
MAIL_FROM_NAME="${APP_NAME}"

# For production (example with SMTP):
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.mailgun.org
# MAIL_PORT=587
# MAIL_USERNAME=your_username
# MAIL_PASSWORD=your_password
# MAIL_ENCRYPTION=tls

# -----------------------------------------------------------------------------
# Frontend CORS Configuration
# -----------------------------------------------------------------------------
FRONTEND_URL=http://localhost:3101
FRONTEND_URL_DEV=http://localhost:5173
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3101,localhost:5173,localhost:8100,127.0.0.1,127.0.0.1:3101,::1

# -----------------------------------------------------------------------------
# Laravel Sanctum Token Configuration
# -----------------------------------------------------------------------------
# Access token: 7 days (10080 minutes)
# Refresh token: 30 days (43200 minutes)
SANCTUM_ACCESS_TOKEN_EXPIRATION=10080
SANCTUM_REFRESH_TOKEN_EXPIRATION=43200

# -----------------------------------------------------------------------------
# Rate Limiting Configuration
# -----------------------------------------------------------------------------
RATE_LIMIT_AUTH=60,1
RATE_LIMIT_LOGIN=5,1
RATE_LIMIT_REGISTER=10,1
RATE_LIMIT_PASSWORD=3,1

# -----------------------------------------------------------------------------
# Password Requirements
# -----------------------------------------------------------------------------
PASSWORD_MIN_LENGTH=12

# -----------------------------------------------------------------------------
# Session Configuration
# -----------------------------------------------------------------------------
SESSION_COOKIE=erp_session
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false

# -----------------------------------------------------------------------------
# File Upload Configuration
# -----------------------------------------------------------------------------
FILE_UPLOAD_MAX_SIZE=10240
FILE_UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,text/csv,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet

# -----------------------------------------------------------------------------
# AWS S3 Configuration (for cloud file storage)
# -----------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=ap-south-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# -----------------------------------------------------------------------------
# Pusher Configuration (for real-time features)
# -----------------------------------------------------------------------------
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=ap2

# -----------------------------------------------------------------------------
# Backup Configuration
# -----------------------------------------------------------------------------
BACKUP_DISK=local
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# -----------------------------------------------------------------------------
# Monitoring Configuration
# -----------------------------------------------------------------------------
# Sentry DSN for error tracking
SENTRY_DSN=

# LogRocket App ID for session replay
LOGROCKET_APP_ID=

# Google Analytics ID
GOOGLE_ANALYTICS_ID=

# -----------------------------------------------------------------------------
# Security Headers Configuration
# -----------------------------------------------------------------------------
SECURITY_HSTS_ENABLED=true
SECURITY_HSTS_MAX_AGE=31536000
SECURITY_HSTS_INCLUDE_SUBDOMAINS=true
SECURITY_HSTS_PRELOAD=true

# -----------------------------------------------------------------------------
# Grafana Configuration (cinfo Grafana)
# -----------------------------------------------------------------------------
GRAFANA_URL=http://grafana:3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=angles123

# -----------------------------------------------------------------------------
# Frontend Environment Variables (Vite)
# -----------------------------------------------------------------------------
VITE_APP_NAME="${APP_NAME}"
VITE_API_BASE_URL="http://localhost:8101/api/v1"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
