# Frontend Environment Variables for Vite

# Application Name
VITE_APP_NAME="ERP DryMix Products"

# API Base URL
# IMPORTANT: Update this to match your backend URL
# Local development: http://localhost:8100/api/v1
# Production: https://api.erpdrymix.com/api/v1
VITE_API_BASE_URL=http://localhost:8100/api/v1

# Application Version (for cache busting)
VITE_APP_VERSION=1.0.0

# Application Environment
# development, staging, or production
VITE_APP_ENV=development

# Enable/Disable Sentry Error Tracking
VITE_SENTRY_ENABLED=false
VITE_SENTRY_DSN=

# Enable/Disable LogRocket Session Replay
VITE_LOGROCKET_ENABLED=false
VITE_LOGROCKET_APP_ID=

# Enable/Disable Google Analytics
VITE_GOOGLE_ANALYTICS_ENABLED=false
VITE_GOOGLE_ANALYTICS_ID=

# Enable/Disable Feature Flags
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_WEBSOCKETS=true

# Default Pagination Settings
VITE_DEFAULT_PAGE_SIZE=15
VITE_MAX_PAGE_SIZE=100

# File Upload Settings
VITE_MAX_FILE_SIZE_MB=10
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,text/csv

# Cache Settings (in milliseconds)
VITE_CACHE_DURATION=300000 # 5 minutes
VITE_STALE_TIME=180000 # 3 minutes

# Timezone Settings
VITE_TIMEZONE=Asia/Kolkata

# Currency Settings
VITE_CURRENCY=INR
VITE_CURRENCY_SYMBOL=â‚¹

# Date/Time Format Settings
VITE_DATE_FORMAT=DD/MM/YYYY
VITE_TIME_FORMAT=HH:MM

# Number Format Settings
VITE_NUMBER_FORMAT=en-IN
VITE_DECIMAL_SEPARATOR=.
VITE_THOUSANDS_SEPARATOR=,

# UI Settings
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,hi

# Map Settings (if using maps)
VITE_GOOGLE_MAPS_API_KEY=

# Pusher Configuration (for real-time features)
VITE_PUSHER_APP_KEY=
VITE_PUSHER_HOST=
VITE_PUSHER_PORT=443
VITE_PUSHER_SCHEME=https
VITE_PUSHER_APP_CLUSTER=mt1

# WebSocket Configuration
VITE_WEBSOCKET_URL=ws://localhost:6001
VITE_WEBSOCKET_ENABLED=false

# Auth Settings
VITE_TOKEN_REFRESH_INTERVAL=2700000 # 45 minutes (before 1 hour expiry)
VITE_SESSION_TIMEOUT=28800000 # 8 hours

# Performance Settings
VITE_ENABLE_LAZY_LOADING=true
VITE_ENABLE_VIRTUAL_SCROLLING=false
VITE_VIRTUAL_SCROLL_ITEM_SIZE=50

# Development Settings
VITE_DEV_TOOLS=true
VITE_HOT_RELOAD=true
VITE_SOURCE_MAPS=true

# Build Settings
VITE_BUILD_ANALYZE=false
VITE_COMPRESS_ASSETS=true

# Feature Toggles
VITE_ENABLE_BULK_ACTIONS=true
VITE_ENABLE_EXPORT=true
VITE_ENABLE_IMPORT=true
VITE_ENABLE_PRINT=true
VITE_ENABLE_PDF_GENERATION=true

# Integration Settings
VITE_ENABLE_CRM_INTEGRATION=false
VITE_ENABLE_ACCOUNTING_INTEGRATION=false
VITE_ENABLE_INVENTORY_INTEGRATION=false

# API Retry Configuration
VITE_API_RETRY_COUNT=3
VITE_API_RETRY_DELAY=1000

# API Timeout Configuration (in milliseconds)
VITE_API_TIMEOUT=30000

# Error Tracking Configuration
VITE_ERROR_TRACKING_ENABLED=false
VITE_ERROR_TRACKING_SAMPLE_RATE=1.0

# Performance Monitoring Configuration
VITE_PERFORMANCE_MONITORING_ENABLED=false
VITE_PERFORMANCE_MONITORING_SAMPLE_RATE=0.1

# Logging Configuration
VITE_LOGGING_ENABLED=true
VITE_LOG_LEVEL=debug # debug, info, warn, error
